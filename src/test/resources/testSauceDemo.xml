        <!-- Login parameters -->
        <parameter name="username" value="standard_user"/>
        <parameter name="password" value="secret_sauce"/>

        <!-- Purchase parameters -->
        <parameter name="firstName" value="Valentina"/>
        <parameter name="lastName" value="Londono"/>
        <parameter name="postalCode" value="760001"/>

