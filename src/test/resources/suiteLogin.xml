<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Login Suite">
    <test name="successfulLoginTest">
        <parameter name="username" value="standard_user"></parameter>
        <parameter name="password" value="secret_sauce"></parameter>
        <classes>
            <class name="com.globant.test.LoginSteps">
                <methods>
                    <include name="successfulLoginTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="failedLoginTest">
        <parameter name="username" value="standard_user"></parameter>
        <parameter name="password" value="secret_sauce1"></parameter>
        <classes>
            <class name="com.globant.test.LoginSteps">
                <methods>
                    <include name="failedLoginTest" />
                </methods>
            </class>
        </classes>
    </test>
</suite>
